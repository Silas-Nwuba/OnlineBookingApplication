@model BookingCreateViewModel
@{
    ViewBag.Title = "Booking";
}
<div class="container">
    <div class="card">
        <div class="card-body" style="background-color:white">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">GMT Motor</li>
                    <li class="breadcrumb-item">Booking System</li>
                </ol>
            </nav>
            <br /><br />
            <h4>Booking Details</h4>
            <hr /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="Bus"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Bus" class="form-control" readonly style="background-color: #ffffff75" />

                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FullName" class="form-control" readonly style="background-color: #ffffff75" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="NIN"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NIN" class="form-control" readonly style="background-color: #ffffff75" />
                        <span asp-validation-for="NIN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="SeatNoId"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="SeatNoId" asp-items=" ViewBag.SeatNoId" class="form-control">
                            <option  value="" disabled selected hidden>Seat No</option>
                           
                        </select>
                        <span asp-validation-for="SeatNoId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="SpecialRequest"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="SpecialRequest" asp-items="Html.GetEnumSelectList<ProjectEntity.SpecialRequest>()" class="form-control">
                        </select>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="BookForOther"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="BookForOther" asp-items="Html.GetEnumSelectList<ProjectEntity.BookForOther>()" class="form-control">
                        </select>
                        <span asp-validation-for="BookForOther" class="text-danger"></span>
                    </div>

                </div>
                <div></div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="TicketType"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TicketType" class="form-control" asp-items="Html.GetEnumSelectList<ProjectEntity.TicketType>()"></select>
                        <span asp-validation-for="TicketType" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="Payment"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="Payment" class="form-control" asp-items="Html.GetEnumSelectList<ProjectEntity.Payment>()"></select>
                        <span asp-validation-for="Payment" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="DepartureFrom"></label>
                    </div>
                    <select asp-for="DepartureFrom" class="form-control">
