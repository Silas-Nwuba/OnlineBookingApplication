                    </select>
                    <span asp-validation-for="ArivalTo" class="text-danger"></span>
                </div><br /><br />
                <div class="form-group">
                    <button type="submit"class="btn btn-rounded btn btn-primary float-left">Submit</button>
                    <a class="btn btn-rounded btn btn-success float-right" asp-action="Index" asp-controller="Customer"><i class="fa-solid fa-backward"><l style="margin-left:7px">back</l></i></a>
                </div>

            </form>
           <br /><br />
        </div>
        <br /><br />
    </div>


</div>
@section Scripts{
  @{ await Html.RenderPartialAsync("_LoginPartial"); }
<script>
    $(document).ready(function () {
        $("form").on("click", "submit", function () {
            confirm("Are you sure you want to submit", function (result) {
                if (result)
                {
                    $.ajax({
                        type: "Post",
                        url: '@Url.ActionLink("Create","Booking")',
                        success: function () {
                            alert("Your booking is successfull submitted");
                        },
                        error: function () {
                            alert("submission Failed")
                        }
                     });
                }

            });


        });

    });
    
</script>

}

