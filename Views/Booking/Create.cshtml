                        <option>Gombe</option>
                        <option>Imo</option>
                        <option>Jigawa</option>
                        <option>Kaduna</option>
                        <option> Kano</option>
                        <option> Katsina</option>
                        <option> Kebbi</option>
                        <option> Kogi</option>
                        <option> Kwara</option>
                        <option> Lagos</option>
                        <option> Nasarawa</option>
                        <option>Niger</option>
                        <option>Ogun</option>
                        <option>Ondo</option>
                        <option>Osun</option>
                        <option>Oyo</option>
                        <option>Plateau</option>
                        <option>Rivers</option>
                        <option>Sokoto</option>
                        <option>Taraba</option>
                        <option>Yobe</option>
                        <option>Zamfara</option>
                        <option>Abia</option>
                        <option>Fct</option>

                    </select>
                    <span asp-validation-for="ArivalTo" class="text-danger"></span>
                </div><br /><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn btn-primary float-left">Submit</button>
                    <a class="btn btn-rounded btn btn-success float-right" asp-action="Index" asp-controller="Customer"><i class="fa-solid fa-backward"><l style="margin-left:7px">back</l></i></a>
                </div>

            </form>
           
        </div>
    </div>


</div>
@section Scripts{
@{ await Html.RenderPartialAsync("_LoginPartial");
}
 }

