@model BookingCreateViewModel
@{
    ViewBag.Title = "Booking";
}
<div class="container">
    <div class="card">
        <div class="card-body" style="background-color:white">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">GMT Motor</li>
                    <li class="breadcrumb-item">Booking System</li>
                </ol>
            </nav>
            <br /><br />
            <h4>Booking Details</h4>
            <hr /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="Bus"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Bus" class="form-control" readonly style="background-color: #ffffff75" />

                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="FullName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FullName" class="form-control" readonly style="background-color: #ffffff75" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="NIN"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NIN" class="form-control" readonly style="background-color: #ffffff75" />
                        <span asp-validation-for="NIN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">

                    <div class="form-group col-md-1">
                        <label asp-for="SeatNoId"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="SeatNoId" asp-items=" ViewBag.SeatNoId" class="form-control">
                            <option  value="" disabled selected hidden>Seat No</option>
                           
                        </select>
                        <span asp-validation-for="SeatNoId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="SpecialRequest"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="SpecialRequest" class="form-control">
                            <option>Select..</option>
                            <option>No</option>
                            <option>Yes</option>

                        </select>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="BookForOther"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="BookForOther" class="form-control">
                            <option value="" disabled selected hidden>Select..</option>
                            <option>No</option>
                            <option>Yes</option>
                        </select>
                        <span asp-validation-for="BookForOther" class="text-danger"></span>
                    </div>

                </div>
                <div></div>
                <div class="form-row">
                    <div class="form-group col-md-1">
                        <label asp-for="TicketType"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="TicketType" class="form-control">
                            <option value="" disabled selected hidden>Select..</option>
                            <option>Reqular</option>
                            <option>Gold</option>
                            <option>Silver</option>
                            <option>Vip</option>
                        </select>
                        <span asp-validation-for="TicketType" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-1">
                        <label asp-for="Payment"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="Payment" class="form-control" asp-items="Html.GetEnumSelectList<ProjectEntity.Payment>()"></select>
                        <span asp-validation-for="Payment" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-1">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="DepartureFrom"></label>
                    </div>
                    <select asp-for="DepartureFrom" class="form-control">
                        <option value="" disabled selected hidden> Select Terminal</option>
                        <option>Aba,  Asa Road Highway</option>
                        <option>Aba,  Asa Road Local</option>
                        <option>Aba, Factory Road</option>
                        <option>Abakaliki, 25A Afikpo Rd. Highway</option>
                        <option>Abuja, Gwagwalada</option>
                        <option>Abuja, Kubwa</option>
                        <option>Abuja, Mararaba</option>
                        <option>Abuja, Utako</option>
                        <option>Abuja, Zuba</option>
                        <option>Afikpo, Ngodo Road</option>
                        <option>Akure, 141 Oyemekun Road</option>
                        <option>Akure, 141 Oyemekun Road</option>
                        <option>Asaba, Head Bridge</option>
                    </select>
                    <span asp-validation-for="DepartureFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="ArivalTo"></label>
                    </div>
                    <select asp-for="ArivalTo" class="form-control">
                        <option value="" disabled selected hidden>Select Destination</option>
                        <option>Abakaliki, 25A Afikpo Rd. Highway</option>
                        <option>Abuja, Gwagwalada</option>
                        <option>Abuja, Kubwa</option>
                        <option>Abuja, Mararaba</option>
                        <option>Abuja, Utako</option>
                        <option>Abuja, Zuba</option>
                        <option>Afikpo, Ngodo Road</option>
                        <option>Akure, 141 Oyemekun Road</option>


                    </select>
                    <span asp-validation-for="ArivalTo" class="text-danger"></span>
                   
                </div><br /><br />
                <div class="form-group">
                    <button type="submit"class="btn btn-rounded btn btn-primary float-left">Submit</button>
                    <a class="btn btn-rounded btn btn-success float-right" asp-action="Index" asp-controller="Customer"><i class="fa-solid fa-backward"><l style="margin-left:7px">back</l></i></a>
                </div>

            </form>
           <br /><br />
        </div>
        <br /><br />
    </div>


</div>
@section Scripts{
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
<script>
    $(document).ready(function () {
        $("form").on("click", "submit", function () {
            confirm("Are you sure you want to submit", function (result) {
                if (result)
                {
                    $.ajax({
                        type: "Post",
                        url: '@Url.ActionLink("Create","Booking")',
                        success: function () {
                            alert("Your booking is successfull submitted");
                        },
                        error: function () {
                            alert("submission Failed")
                        }
                     });
                }

            });


        });

    });
    
</script>

}

