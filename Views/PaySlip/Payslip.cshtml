@model PaySlipViewModel
@{
    ViewBag.Title = "PaySlip";
    Layout = null;
}
<div class="container">
    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card" style="background:white">
                <div class="card-body">
                    <div class=" mt-5">
                        <div style="float:right;margin-left:20px">
                            <img class="img-responsive" src="~/Image/bus 4.jpg" style="width:120px;height:120px" />
                            <h5 style="font-weight:500">Goodness And Mercy<br /> Motors Transit </h5>

                        </div>
                    </div>
                    <br />
                    <br /><br /><br /><br /> <br /><br /><br /><br /><br />

                    <h4 style="margin-left:48px">Customer Information</h4>
                    <hr />

                    <div class="row" style="margin-left:40px">
                        <div class="col-md-3">
                            <p class="font-weight-normal"><l class="text-info">Customer Name</l> : @Model.FullName </p>
                        </div>
                        <div class="col-md-3">
                            <p class="font-weight-normal" style="margin-left:15px"> <l class="text-info">Gender</l>: @Model.Gender</p>

                        </div>
                        <div class="col-md-3">
                            <p class="font-weight-normal"><l class="text-info">Phone Number</l>: @Model.Phone </p>
                        </div>
                        <div class="col-md-3">

                            <p class="font-weight-normal"><l class="text-info">State</l>: @Model.State </p>

                        </div>
                    </div>

                    <br /><br />

                    <h4 style="margin-left:48px">Booking Details</h4>
                    <hr />

                    <div class="row" style="margin-left:40px">
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Departure From</l> : @Model.TravelLoction</p>
                        </div>
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Arival To</l> : @Model.TravelArival</p>
                        </div>
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Booking For Other</l> : @Model.BookForOther</p>
                        </div>
                    </div>
                    <div class="row" style="margin-left:40px">
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Ticket Type</l>: @Model.TicketType</p>
                        </div>
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Special Request</l> : @Model.SpecialRequest</p>
                        </div>
                        <div class="col-md-4">
                            <p class="font-weight-normal"><l class="text-info">Seat No</l> : @Model.SeatNoId</p>
                        </div>

                    </div>
                    <br /><br />
                    <h4 style="margin-left:40px">Payment Details</h4><br />
                    <div class="row">
                        <div class="col-md-12 table-responsive-md">
                            <table class="table-striped" style="border-spacing:5px">
                                <thead class="table-success">
                                    <tr>
                                        <th style="width:100%;padding:10px;font-size:16px">Description</th>
                                        <th style="width: 100%; padding: 10px; font-size: 16px">Amount</th>
                                    </tr>

                                </thead>
                                <tbody class="mb-5">
                                    <tr>
                                        <td style="padding:8px">
                                            <p class="font-weight-normal"><l class="text-info">Travelling Price
                                        </td>

                                        <td style="padding:8px">
                                            @Model.Price.ToString("c")
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px">
                                            <p class="font-weight-normal"><l class="text-info">Booking For Other
                                        </td>

                                        <td style="padding:8px">
                                            @Model.BookAmount.ToString("c")
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px">
                                            <p class="font-weight-normal"><l class="text-info">Special Request
                                        </td>

                                        <td style="padding:8px">
                                            @Model.SpecialAmount.ToString("c")
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding:8px">
                                            <p class="font-weight-normal"><l class="text-info">Ticket Type
                                        </td>

                                        <td style="padding:8px">
                                            @Model.TotalAmount.ToString("c")
                                        </td>
                                    </tr>
                                    <tr class="table-secondary" style="padding:15px">
                                        <td style="padding:8px">
                                            <p class="font-weight-normal" style="color: white; font-size: 18px"><l class="text-info">Total
                                        </td>

                                        <td style="padding:8px">
                                            @Model.TotalAmount.ToString("c")
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                    <br /><br />
                    <div style="text-align:center">
                        <h4>Note</h4>
                        <p>Transaction has been submitted successfull kindly print your reciept because it will required by GMT officials before entering the bus</p>
                        <p>Thanks</p>
                    </div>
                    <br />
                   
                </div>

            </div>
        </div>
    </div>
</div>
