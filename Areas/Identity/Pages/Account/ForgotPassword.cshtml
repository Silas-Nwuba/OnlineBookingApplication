@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 ml-10">
            @*<img src="~/Image/logo capture.PNG"style="width:200px" />*@
            <br /><br />
            <h4 class="text-primary font-weight-bold">Peace Mass Transit</h4>
            <p>We are trusted and Reliable,Call to service</p>
            <p>Contact us today to enjoy our Confortable Services</p>
            <span>
                <a href="https://twitter.com/SilasNwuba"><i class="fa-brands fa-twitter text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="https://web.facebook.com/?_rdc=1&_rdr"><i class="fa-brands fa-facebook text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="tel:09092350484"><i class="fa-solid fa-phone" style="background-color: #007bff; padding: 4px; font-size: 12px;border-radius:100%;color:#eee;position:relative;bottom:3px;left:3px"></i></a>
            </span>
        </div><br /><br />
        <div class="col-md-offset-12 col-md-6" style="float:right">
            <div class="card" style=" background-color:white;width:100%;border-radius:5px">
                <div class="card-body">
                    <h4>Forget Password</h4><br />
                    <div class="reset">
                        <p1>Enter Your Email</p1>
                    </div><br />
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control"placeholder=" &#x2709; Calaeb@gmail.com" />
                            
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width:100%;outline:none">Submit</button>
                        <a href="#"style="text-align:center;margin-top:10px">Back to Login</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer">
    <partial name="_LoginViewPartial" />

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

