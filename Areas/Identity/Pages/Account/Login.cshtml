<div class="container">
    <div class="row">
        <div class="col-md-6 ml-10">
            @*<img src="~/Image/logo capture.PNG"style="width:200px" />*@
        <br /><br />
            <h4 class="text-primary font-weight-bold">Peace Mass Transit</h4>
            <p>We are trusted and Reliable,Call to service</p>
            <p>Contact us today to enjoy our Confortable Services</p>
            <span>
                <a href="https://twitter.com/SilasNwuba"><i class="fa-brands fa-twitter text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="https://web.facebook.com/?_rdc=1&_rdr"><i class="fa-brands fa-facebook text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="tel:09092350484"><i class="fa-solid fa-phone" style="background-color: #007bff; padding: 4px; font-size: 12px;border-radius:100%;color:#eee;position:relative;bottom:3px;left:3px"></i></a>

            </span>
        </div><br /><br />
        <div class="col-md-offset-12 col-md-6" style="float:right">
            <div class="card" style=" background-color:white;width:100%;border-radius:5px;">
                <div class="card-body">
                    <section>
                        <form method="post" enctype="multipart/form-data" id="Account">
                            <h1>@ViewData["Title"]</h1>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <i class="fa fa-envelope" aria-hidden="true"></i><label asp-for="Input.Email" style="margin:5px"></label>
                                <input asp-for="Input.Email" class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <i class="fas fa-lock"></i><label asp-for="Input.Password" style="margin:5px"></label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" style="width:100%;outline:none">Log in</button>
                            </div>
                            <div class="form-group">
                                <div style="display:flex;justify-content:space-between">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                </div>

                            </div>
                        </form>
                    </section>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="footer">
    <partial name="_LoginViewPartial" />

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


