@{
    ViewData["Title"] = "Register";
    Layout = null;
}
<br />
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6 ml-10">
            @*<img src="~/Image/logo capture.PNG"style="width:200px" />*@
            <br /><br />
            <h4 class="text-primary font-weight-bold">Peace Mass Transit</h4>
            <p>We are trusted and Reliable,Call to service</p>
            <p>Contact us today to enjoy our Confortable Services</p>
            <span>
                <a href="https://twitter.com/SilasNwuba"><i class="fa-brands fa-twitter text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="https://web.facebook.com/?_rdc=1&_rdr"><i class="fa-brands fa-facebook text-primary" style="font-size: 20px; padding: 4px"></i></a>
                <a href="tel:09092350484"><i class="fa-solid fa-phone" style="background-color: #007bff; padding: 4px; font-size: 12px;border-radius:100%;color:#eee;position:relative;bottom:3px;left:3px"></i></a>
            </span>
        </div><br /><br />
        <div class="col-md-offset-12 col-md-6" style="float:right">
            <div class="card" style=" background-color:white;width:100%;border-radius:5px">
                <div class="card-body">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <h4>Create a new account.</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <i class="fa fa-envelope" aria-hidden="true"></i> <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <i class="fas fa-lock"></i> <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="input-icon">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input type="password" name="password" asp-for="Input.ConfirmPassword" class="form-control" id="password" />
                            <i class="far fa-eye-slash" id="togglePassword"></i>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="width:100%;outline:none">Register</button>
                    </form>
                </div>

            </div>

        </div>

    </div>
</div>
<div class="footer">
    <partial name="_LoginViewPartial" />

</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
